<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/arctic_ocean"
    android:id="@+id/main_frame">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="26dp"
        android:textColor="#676969"
        android:fontFamily="sans-serif-medium"
        android:text="0"
        android:textSize="40sp"
        android:id="@+id/stepnumber"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_below="@+id/stepnumber"
        android:textColor="#676969"
        android:fontFamily="sans-serif-medium"
        android:text="@string/steps_label"
        android:textSize="26sp"
        android:id="@+id/stepnumber_label"/>
    <TextView
        android:id="@+id/main_cityname"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="22dp"
        android:textColor="#9A9D9D"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/places_arctic_ocean"
        android:textSize="20sp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/FAB_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="34dp"
        android:src="@drawable/ico_map"
        android:scaleType="center"
        app:borderWidth="0dp"
        app:backgroundTint="#00BBD3"
        app:fabSize="normal"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/FAB_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="34dp"
        android:src="@drawable/ico_bearhead"
        android:scaleType="center"
        app:borderWidth="0dp"
        app:backgroundTint="#00BBD3"
        app:fabSize="normal"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp" />



</RelativeLayout>
